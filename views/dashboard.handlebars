<section class="container d-flex flex-column">

    <section class="d-flex justify-content-center py-2 mb-3">
        <h1 class="dashboard-font">My Dashboard</h1>
    </section>


    <section class="d-flex flex-row justify-content-center">
        {{#each workouts as |workout|}}
        <section class="card bg-light mx-4 my-3 py-3 col-lg-3 d-flex align-items-stretch form-opacity">
            <section class="card-body-5">

                {{!-- workout name --}}
                <a href="/edit/{{workout.id}}">
                    <h3 class="card-title">{{name}}</h3>
                </a>

                {{!-- workout description --}}
                <p class="card-text dashboard-font">{{description}}</p>

                {{!-- workout duration --}}
                <p class="card-text dashboard-font">Duration: {{duration}}</p>

                {{!-- workout weight or speed --}}
                <p class="card-text dashboard-font">Weight/Speed: {{optional}}</p>

            </section>
        </section>
        {{/each}}
    </section>

    <section class="mt-5">
        {{!-- option to create new post --}}
        <a class="font-height" href="/new">
            + New Workout
        </a>

    </section>

    <section class="container d-flex flex-column pb-4">
        <section id="user-workout-section"></section>
    </section>
</section>

