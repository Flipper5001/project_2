{{!-- {{#each}}
{{/each}} --}}
<section>
    <h1>My Dashboard</h1>
</section>

{{#each workouts as |workout|}}
<section class="card bg-light mx-4 my-3 col-lg-3 d-flex align-items-stretch">
    <section class="card-body">

        {{!-- workout name --}}
        <a href="/edit/{{workout.id}}"><h3 class="card-title">{{name}}</h3></a>

        {{!-- workout description --}}
        <p class="card-text">{{description}}</p>

        {{!-- workout duration --}}
        <p class="card-text">Duration: {{duration}}</p>
        
        {{!-- workout weight or speed --}}
        <p class="card-text">Weight/Speed: {{optional}}</p>

    </section>
</section>
{{/each}}
<section>
    {{!-- option to create new post --}}
    <a href="/new"><h1>+ New Workout</h1></a>
</section>
